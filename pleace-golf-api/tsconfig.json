{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es6",
    "lib": [ "es2015" ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "noImplicitAny": false,
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "inlineSources": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/logging.config.json"
  ],
  "exclude": [
    "./dist"
  ]
}
